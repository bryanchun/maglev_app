<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.usel.maglev.maglev_app.MainActivity">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_shadow"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/color_preview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="R"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/red_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:max="255"
                    android:progress="240"
                    android:layout_weight="6" />

                <TextView
                    android:id="@+id/red_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="240"
                    android:progress="240"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="G"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/green_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:max="255"
                    android:progress="181"
                    android:layout_weight="6" />

                <TextView
                    android:id="@+id/green_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="181"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="B"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/blue_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:max="255"
                    android:progress="65"
                    android:layout_weight="6" />

                <TextView
                    android:id="@+id/blue_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="65"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/submit_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="15dp"
                android:text="OK"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="138dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
